{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "examples/FireblocksXrpAdapter.service.ts",
    "src/FireblocksXrpSdk.ts",
    "examples/errors"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
